<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backplayer"
    tools:context=".View.MusicPlayerActivity">

    <!-- CAPÇALERA -->
    <LinearLayout
        android:id="@+id/PlayerHeader"
        android:layout_marginTop="30dp"
        android:layout_width="365dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/IconLeft"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"/>

        <!-- Texto en el centro -->
        <TextView
            android:id="@+id/PlayerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Now Playing"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/IconRight"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/more"/>

    </LinearLayout>

    <!-- INFORMACIÓ DE LA CANCIÓ -->
    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/PlayerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/PlayerHeader"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/songcover"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textMusicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom de la canço"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/InfoSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom artista"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconHeart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/heart"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <!-- BARRA DE POGRES -->
    <LinearLayout
        android:id="@+id/Seekbar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/PlayerInfo"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="25"/>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"/>
        </LinearLayout>
    </LinearLayout>

    <!-- CONTOL DE LA CANCO -->
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Seekbar"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20sp"
            android:src="@drawable/shuffle"/>

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="70dp"
            android:layout_height="25sp"
            android:src="@drawable/previous"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/btnPlayOrPause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/pause"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="70dp"
            android:layout_height="25sp"
            android:src="@drawable/previous"
            android:rotation="180"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/playllist"
            android:layout_width="50dp"
            android:layout_height="20sp"
            android:src="@drawable/playllista"/>
    </LinearLayout>


</RelativeLayout>